@page
@model Subject.AddModel
@{
    ViewData["Title"] = "Add Subject";
}

<h2>Add new Subject</h2>

<div class="row">
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-10 offset-sm-2">
                        <span asp-validation-for="Subject.Acronym" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="Subject.Acronym" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Subject.Acronym" class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-10 offset-sm-2">
                        <span asp-validation-for="Subject.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="Subject.Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Subject.Name" class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add new Subject" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to list of Subjects</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}